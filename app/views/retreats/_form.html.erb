<%= form_for @retreat, :html => { :class =>
'form-new-retreat' } do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :address %>
<%= f.text_field :address %>
<%= f.label :price %>
<%= f.text_field :cost %>
<%= f.label :start_date %>
<%= f.text_field :start_date %>
<%= f.label :end_date %>
<%= f.text_field :end_date %>
<%= f.label :description %>
<%= f.text_area :description, class: "form-control", rows:"10" %>
<%= f.submit%>
<% end %>
